{{#foreach posts}}
  <article class="{{post_class}}">
    <header class="post-header">
    
      <h2><a href="{{url}}">{{title}}</a></h2> 
      <small class="post-date">Published:</small>           
      <small datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}} </small>
      <br>
      <small class="post-date">Updated:</small>
      <small>{{date updated_at format="DD MMMM YYYY"}}</small>

{{!--        <span> | </span>
      <a class="read-more" href="{{url}}"> Entrar</a>
 --}}    </header>

    <section class="post-excerpt">
      <p>{{excerpt words="50"}}<a class="read-more" href="{{url}}">(...)</a></p>
      <a class="read-more-enter" href="{{url}}">Entrar</a>
    </section>
    <footer class="post-meta">
      {{#if author.image}}<img src="{{author.image}}" alt="Author image" />{{/if}}
      {{author}}
      {{tags prefix=" en "}}
      
    </footer>
    <hr>
  </article>
 {{/foreach}}