<!-- Everything inside of #tag pulls data from the tag -->
{{!< default}}

{{#tag}}
  <header>
    {{#if image}}
      <img src="{{image}})" alt="{{name}}" />
    {/if}}
  </header>

  <section class="author-profile">   
    <h1>{{name}}</h1>
      <h2>{{description}}</h2>
    {{/if}}
  </section>
{{/tag}}

<main role="main">
    <!-- includes the post loop - partials/loop.hbs -->
    {{> "loop"}}
</main>

<!-- Previous/next page links - displayed on every page -->
{{pagination}}