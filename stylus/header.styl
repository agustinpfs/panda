.Header
	display flex
	justify-content space-between
	align-items center
	background black
	color white	
	font-family helvetica	
	z-index 20
	margin-bottom 0
	&-icon-menu
		display block
	img 
		margin-top .5rem
	h1
		text-transform: uppercase
		a 
			text-decoration none 
			color: white
			font-weight: 200 !important
			&:hover
				color #f2f2f2
			&:active
				color #00ccff
		
	&-title
		margin-left .5rem		
	&-menu-mobil
		background white
		position absolute
		right 0
		top -221px
		width 100%
		border-bottom 1px solid grey
		z-index 17	
		label 
			position absolute
			right: .2rem
			bottom: .2rem
			color: black
			span 
				font-size: 2rem	
		&-nav
			list-style none
			width 100px
			margin 1rem auto	
			li 
				margin-right 1rem
				margin-bottom 1rem
			a
				color black
			a:hover
				margin-left .1	rem

	.check
		display none
		&:checked~.Header-menu-mobil
			top: 37px
	span
		margin-right .5rem
	label
		cursor pointer

.gh-signin
	display flex
	// margin-top .5rem
	margin-bottom 2rem
	
	// background-color #ffcccc
	
.gh-input
	border-bottom 2px solid grey
	border-top 0
	border-right 0
	border-left 0
	// height: 1.5rem
	// margin-right .2rem
	margin-left .5rem
	// background: #f2f2f2
	font-size: 90%
	
.btn
	background: #f2f2f2
	border 0
	font-size: .9rem
	// text-decoration: underline
	&:hover
		text-decoration: underline
		background: #f2f2f2
@media (min-width: 600px)
	.Header
		margin-bottom 2rem
		&-icon-menu
			display none
		&-subscribe
			display none
