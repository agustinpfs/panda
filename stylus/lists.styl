.List
	&-author
	&-tag
		width: 80%
		margin 0 auto
	&-main
		width 80%
		margin 0 auto
		main
			z-index: -1	
		.post
				
			h2
				margin-top .5rem
				margin-bottom .3rem
				a 
					text-decoration none
					color black
				a:hover
					color #4775d1
			&-date
				color #cc0000
			footer
				padding-top 1rem
				color #cc0000
				font-size: .8rem
				a 
					color #551a8b
			small
				margin-right .5rem
		.featured
			background-color #f5f9ff
			padding .5rem
			border 2px solid #cc0000

		.read-more
			// background #f2f2f2
			margin-left .5rem
			text-decoration none
			color #4775d1
	
				
			
			&-enter 
				color #f2f2f2
				text-decoration: none
				background #4775d1
				padding .2rem
				&:hover 
					text-decoration: underline
					
					
