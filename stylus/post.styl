.Post
	
	article 
		width: 90%
		margin 0 auto

		
	&-top 
		width: 100%	
		display: flex 
		justify-content: space-between
		margin-bottom .1rem
		font-size: .8rem
		a 
			&:hover
				color #551a8b
	&-button
		padding: .2rem
		color white
		background-color green
		// margin-bottom 1.5rem
	&-next 
		display flex
		justify-content: space-between
		color black
		margin-bottom 1rem
		a 
			display block
			color white
			text-decoration: underline !important
		&-right 
			text-align: right

	hr 
		margin-top 0
.test-code
	padding: .2rem
	color white
	background-color #80002a
.post-content 
	position: relative
	p 
		em
			a 
				display block
				text-align: right
				// right .2rem
				// top .2rem
				color #cc0044

#my-element
	z-index: 100
	display: block !important

a#help
	display none !important
.controls
	display none !important
	background-color red


