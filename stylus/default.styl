.body
	max-width 100vw
img 
	max-width 100%
	
.default 
	&-navigation
		display none
		.gh-signin
			display flex
			margin-top .5rem
			background-color transparent		
		.gh-input
			border 1px solid grey
			// height: 1.5rem
			margin-top 0
			margin-right .2rem
			margin-left .5rem
			// background: #f2f2f2
			
			&::placeholder
				color red		
		.btn
			background: transparent
			border 0
			font-size: .9rem
			// text-decoration: underline
			&:hover
				text-decoration: underline		
		// width 10%		
		li 
			list-style: none
			// background 	#999
			padding .5rem
			border-bottom 1px solid #ccc
			margin-right .5rem
		a 
			text-decoration: none			
			color black
			font-weight: 500
		a:hover
			font-size: 95%
			padding-left 1px
			color #1d1d1d

::-webkit-input-placeholder { /* Chrome/Opera/Safari */
	color: #ccc;
	font-weight 200
	font-size .8rem
	}	
			
	
@media (min-width: 600px)
	.main-error
		background red !important
		color white !important
	.default
		// max-width 100vw
		
			
		&-main
			display: flex
			justify-content: space-between
			max-width 100vw
		&-body 
			width 75vw			
		// &-body-mobile
		// 	display: none
		&-navigation
			display block
			width 12vw
			.gh-signin
				display block
				padding-right .5rem
				// margin-bottom 1rem
				margin-top 1rem
				// background #f2f2f2
				width 100%
				text-align center
				box-sizing: border-box
				
				input 
					margin: 0 auto
					width 100%
					font-size: .8rem
					height: 1.2rem

					
				
			.btn 
				// color #cc0000
				color green
				display: block
				width 6rem
				margin 0 auto
				margin-top .5rem
				// background #ccc